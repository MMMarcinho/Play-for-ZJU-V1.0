<!--pages/enroll/enroll.wxml-->
<view class='background'>

	<view class="head">
		<open-data type="userAvatarUrl" class="headpic"></open-data>
	</view>

	<view class='First'>
		<input id='name' placeholder="用户名" placeholder-class="plas" class='inputs' type="text" bindinput="usernameInput"></input>
	</view>

	<view class='Second'>
		<input id='phonenumber' placeholder="手机号" placeholder-class="plas" class='inputs' type="number" bindinput="phonenumberInput"></input>
	</view>

	<view class='Second'>
		<input id='password' placeholder="登录密码" placeholder-class="plas" class='inputs' type="password" bindinput="passwordInput"></input>
	</view>

	<view class='Second'>
		<input id='passwordAck' placeholder="确认密码" placeholder-class="plas" class='inputs' type="password" bindinput="passwordInputAck"></input>
	</view>

	<view id='btn' class='click' bindtap='regist'>注册</view>
	<view class='cha' bindtap="signin">
		<text class='no'>已有帐号，点我登录</text>
	</view>

</view>