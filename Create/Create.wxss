page{
  background-color: rgb(255, 248, 227);
}

.title{
  width: 100%;
  top: 0rpx;
  position: fixed;
  height: 15%;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgb(255, 96, 96)), to(rgb(116, 197, 254)));
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 5rpx solid rgb(0, 179, 255);
  z-index: 1;
}

.head{
  font-size: 55rpx;
  font-weight: bold;
  color: white;
}

.back{
  margin-left: 30rpx;
  margin-top: -20rpx;
  font-size: 22rpx;
  font-weight: lighter;
}

.main{
  padding-top: 210rpx;
  background: rgb(255, 248, 227);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.q{
  width: 710rpx;
  margin-top: 20rpx;
  border-bottom: 1rpx solid rgb(225, 225, 225);
  color: rgb(152, 152, 152);
}

.question{
  margin-left: 10rpx;
  font-weight: lighter;
  font-size: 35rpx;
}

.re{
  margin-top: 10rpx;
  padding-bottom: 20rpx;
}

.input{
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 35rpx;
}

.go{
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.yes{
  width: 180rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: black;
  font-weight: lighter;
  font-size: 25rpx;
}

.yespic{
  width: 150rpx;
  height: 150rpx;
}

.no{
  margin-top: 10rpx;
}