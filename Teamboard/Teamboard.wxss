@import "/pages/Top_menu/Top_menu.wxss";



.scbg{
  background-color:rgb(255, 255, 255);
  margin-top: 180rpx;
  width: 100%;
  height: 60%;
  padding-bottom: 115rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.team{
  margin-top: 1rpx;
  width: 735rpx;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
/*   border: 2rpx solid rgb(225, 225, 225); */
/*   border-radius: 20rpx; */
  flex-direction: row;
  margin-left: 15rpx;
  background-color: rgb(204,230,255);
}

.headandname{
  width: 220rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.list{
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: lighter;
  padding-top: -10rpx;
  padding-bottom: 10rpx;
}

.head{
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  width: 200rpx;
  height: 200rpx;
}

.details{
  margin-left: 30rpx;
  height: 300rpx;
  width: 250rpx;
  display: flex;
  flex-direction: column;
  font-weight: lighter;
  align-items: center;
  justify-content: center;
}

.txt{
  padding-bottom: 30rpx;
  width: 250rpx;
  font-size: 32rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.txt_name{
  text-overflow: ellipsis;
}

.name{
  text-overflow: ellipsis;
  width: 220rpx;
}

.mine{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.yes{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.introduction{
  display: flex;
}

