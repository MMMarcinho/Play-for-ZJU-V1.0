

.toprow{
  background-color: rgb(244, 244, 255);
  width: 100%;
  height: 60rpx;
  top: 0rpx;
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid rgb(219, 219, 219);
}

.toptab{
  width: 166rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.toptabtext{
  font-size: 25rpx;
  font-weight: bold;
  color: rgb(13,65,140);
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

