/* pages/Manage/Manage.wxss */

page{
  background-color: rgb(255, 255, 255);
}
 
.head{
  width: 770rpx;
  height: 150rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgb(209, 228, 255)), to(rgb(134, 209, 234)));
  position: fixed;
  top: 0rpx;
  border-bottom: 10rpx solid rgb(116, 182, 203);
  border-left: 10rpx solid rgb(116, 182, 203);
  border-right: 10rpx solid rgb(116, 182, 203);
  margin-left: -10rpx; 
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  z-index: 2;
}

.headtext{
  font-size: 50rpx;
  font-weight: bold;
  color: white;
}

.scbg{
  padding-top: 170rpx;
  background-color: rgb(255, 255, 255);
  height: 1300rpx;
}

.itembox{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.item{
  width: 300rpx;
  height: 200rpx;
  border-radius: 40rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 35rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgb(238, 255, 250)), to(rgb(209, 244, 246)));
  border-bottom: 10rpx solid rgb(183, 227, 229);
  border-right: 10rpx solid rgb(183, 227, 229);
  margin-left: 50rpx;
  font-weight: bold;
}

.bigitem{
  width: 650rpx;
  height: 250rpx;
  border-radius: 40rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgb(213, 225, 248)), to(rgb(186, 246, 241)));
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 10rpx solid rgb(162, 224, 219);
  border-right: 10rpx solid rgb(162, 224, 219);
  margin-left: 50rpx;
  font-weight: bold;
}

.longitem{
  width: 650rpx;
  height: 100rpx;
  border-radius: 40rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgb(229, 241, 249)), to(rgb(255, 255, 255)));
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 10rpx solid rgb(187, 206, 219);
  border-right: 10rpx solid rgb(187, 206, 219);
  margin-left: 50rpx;
  font-weight: bold;
}

.smallitem{
  width: 185rpx;
  height: 150rpx;
  border-radius: 40rpx;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 27rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgb(229, 248, 249)), to(rgb(219, 240, 249)));
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  border-bottom: 10rpx solid rgb(192, 216, 227);
  border-right: 10rpx solid rgb(192, 216, 227);
  margin-left: 50rpx;
  margin-right: -10rpx;
  font-weight: bold;
}